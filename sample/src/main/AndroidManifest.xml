<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toe.chowder.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.toe.chowder.sample.activities.ChowderRestSample"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="MPESA REST APIs"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.toe.chowder.sample.activities.ChowderSoapSample"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="MPESA SOAP APIs"
            android:windowSoftInputMode="stateHidden" />
    </application>
</manifest>
